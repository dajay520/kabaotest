<%= form_for(@interface,:class=>'form-horizontal') do |f| %>
  <% if @interface.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@interface.errors.count, "") %> 个校验错误:</h2>

      <ul>
      <% @interface.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    接口中文描述<br />
    <%= f.text_field :name_cn,:placeholder=>"例:获取商品列表.."%>
  </div>
  <div class="field">
    接口名称<br />
    <%= f.text_field :name_en,:placeholder=>"例:getGoodsList" %>
  </div>
  <div class="field">
    备注<br />
    <%= f.text_field :remark,:placeholder=>"接口功能描述.."%>
  </div>
  <div class="field">
    接口类型(目前仅支持http)<br />
    <select >
    	<option default value='1'>http</option>
    	<option value='2'>soap</option>
    	<option value='3'>tcp/socket</option>
    </select>
  </div>
  <div class="actions">
    <%= f.submit :class=>'btn',:value=>'提交'%>
  </div>
<% end %>
