<!DOCTYPE html>
<html>
	<head>
		<title>http接口模拟工具beta0.3</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= stylesheet_link_tag    "styles", :media => "all" %>
		<%= stylesheet_link_tag    "bootstrap-responsive", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "bootstrap-alert" %>
		<%= javascript_include_tag "bootstrap-tooltip" %>
		<%= csrf_meta_tags %>
	</head>
	<body data-spy="scroll" data-target=".subnav" data-offset="50">
		<!-- Navbar
		================================================== -->
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
					<a class="brand" href="/">http接口模拟工具</a>
					<!--
					<div class="btn-group pull-right">
						<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"> <i class="icon-user"></i> Username <span class="caret"></span> </a>
						<ul class="dropdown-menu">
							<li>
								<a href="#">Profile</a>
							</li>
							<li class="divider"></li>
							<li>
								<a href="#">Sign Out</a>
							</li>
						</ul>
					</div>-->
					
					<div class="nav-collapse">
						<ul class="nav">
							<li class="active">
								<a href="/">主页</a>
							</li>
							<li class="active">
								<a href="/help">帮助</a>
							</li>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row-fluid">
				<div class="span3">
					<div class="well sidebar-nav">
						<ul class="nav nav-list">
							<li class="nav-header">
								<i class="icon-th-list"></i>HTTP接口列表
							</li>
							<% session[:menuList].each do |inter| %>
							<li <%if inter['id'].to_s==session[:selected]%>class='active'<%end%>>
								<a href='/config/<%=inter['id']%>'><%=inter['name_cn']%></a>
							</li>
							<% end%>
							
							<li class="nav-header">
								<i class="icon-pencil"></i>接口管理
							</li>
							<li <%if 'new'==session[:m_selected]%>class='active'<%end%>>
								<a href="/interfaces/new">新增接口</a>
							</li>
							<li <%if 'index'==session[:m_selected]%>class='active'<%end%>>
								<a href="/interfaces/">修改接口</a>
							</li>
						</ul>
					</div><!--/.well -->
				</div><!--/span-->
				<div class="span9">
					<div class="hero-unit" style='padding:30px'>
						<%= yield %>
					</div>
				</div><!--/span-->
			</div><!--/row-->
			<hr>
			<footer>
				<p>
					&copy; alipay 2012 developer:dajay mail:dajay520@gmail.com
				</p>
			</footer>
		</div>
		</div>
	</body>
</html>
